<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.link.jk.jkframework.mapper.MemberMapper">

    <resultMap id="menuFullList" type="com.link.jk.jkframework.dto.MemberDto">
        <result column="USERNAME" property="username" />
        <result column="PASSWORD" property="password" />
    </resultMap>



    <insert id="joinUser" parameterType="com.link.jk.jkframework.dto.MemberDto">
        INSERT INTO test_member
        (
            username,
            password
        )
        VALUES
        (
            #{username},
            #{password}
        )
    </insert>

    <select id="selectUserId" parameterType="String" resultMap="menuFullList">
        select
            username,
            password
        from test_member
        where username=#{username}
    </select>

</mapper>
